{% set ID = "add_product_window" %}

<div class="modal fade"
  id="{{ ID }}"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="{{ ID }}_label"
  style="display: none;"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="{{ ID }}_label">New Product</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p><form id="form_{{ ID }}" onsubmit="add_product('{{ ID }}'); return false">
          <div class="input-group mb-3">
            <span class="input-group-text">Name</span>
            <input class="form-control"
              type="text"
              name="name"
              minlength="1"
              maxlength="50"
              id="{{ ID }}_input_name"
            />
            <div class="invalid-feedback">Name is invalid</div>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">Description</span>
            <textarea class="form-control"
              name="description"
              id="{{ ID }}_input_desc"
            ></textarea>
            <div class="invalid-feedback">Description is invalid</div>
          </div>
          <div class="input-group">
            <span class="input-group-text">Price</span>
            <input class="form-control"
              name="price"
              type="text"
              id="{{ ID }}_input_price"
              value="0.0"
              min="0.0"
            />
            <span class="input-group-text">$</span>
            <div class="invalid-feedback">Price is invalid</div>
          </div>
        </form></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit"
          class="btn btn-primary"
          id="{{ ID }}_add"
          form="form_{{ ID }}"
        >
          <span class="pnd-default-label">Add</span>
          <span class="pnd-wait-spinner" hidden="">
            <span class="spinner-border spinner-border-sm"
              aria-hidden="true"
            ></span>
            <span role="status">Loading...</span>
          </span>
        </button>
      </div>
    </div>
  </div>
  <script>init_modal_inputs_clearer("{{ ID }}")</script>
  <script>
    (() => {
      let obj = document.getElementById("{{ ID }}")
      let elem = document.getElementById("{{ ID }}_input_price")
      obj.addEventListener("show.bs.modal", (e) => elem.value = "0.0")
    })();
  </script>
</div>